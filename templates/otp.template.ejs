    </noscript>
    <![endif]-->
    <style>
        /* Reset styles */
        table,td{border-collapse:collapse}.email-wrapper,body{background-color:#f5f5f5}.otp-code,.otp-label{font-weight:700;color:#000}.footer-content,.header-title,.logo-cell,.otp-content{text-align:center}a,body,div,li,p,span,table,td{-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;margin:0;padding:0}body{width:100%!important;height:100%!important;margin:0;padding:0;font-family:Arial,sans-serif;line-height:1.6}table{mso-table-lspace:0pt;mso-table-rspace:0pt}.email-wrapper{padding:20px 0}.email-container{background-color:#fff;border-radius:10px;box-shadow:0 5px 15px rgba(0,0,0,.1);overflow:hidden;max-width:600px;margin:0 auto}.header-bg{background:linear-gradient(135deg,#fddb32 0,#f0c800 100%)}.logo-cell{padding:30px 20px 15px}.logo{width:60px;height:60px;background-color:#000;border-radius:50%;display:inline-flex;align-items:center;justify-content:center;font-size:24px;margin:0 auto}.header-title{padding:0 20px 30px}.header-title h1{color:#000;font-size:28px;font-weight:700;margin:0;text-shadow:1px 1px 2px rgba(0,0,0,.1)}.content-cell{padding:40px 30px;color:#333}.greeting{font-size:18px;color:#333;margin-bottom:20px}.message{font-size:16px;color:#555;margin-bottom:30px;line-height:1.5}.otp-wrapper{padding:30px 0}.otp-container{background:linear-gradient(135deg,#fddb32 0,#f0c800 100%);border-radius:15px;margin:0 auto;max-width:550px}.otp-content{padding:30px}.otp-label{font-size:16px;margin-bottom:15px;text-transform:uppercase;letter-spacing:1px}.otp-code{font-size:36px;letter-spacing:8px;margin:10px 0;text-shadow:2px 2px 4px rgba(0,0,0,.1);font-family:'Courier New',monospace}.otp-note{font-size:14px;color:#000;margin-top:15px;font-weight:500}.instructions-wrapper,.warning-wrapper{padding:25px 0}.instructions{background-color:#f8f9fa;border-left:4px solid #fddb32;border-radius:5px;padding:20px}.instructions h3{color:#333;font-size:16px;margin:0 0 10px}.instructions p{color:#666;font-size:14px;margin:5px 0}.warning{background-color:#fff3cd;border:1px solid #ffeaa7;border-radius:8px;padding:15px}.warning-content{color:#856404;font-size:14px;font-weight:500}.warning-icon{color:#856404;font-size:18px;margin-right:5px}.footer-bg{background-color:#000}.footer-content{padding:25px 30px;color:#fddb32}.company-name{font-weight:700;font-size:16px;margin-bottom:10px}.footer-text{margin:5px 0;font-size:14px}.contact-info{color:#fff;font-size:12px;opacity:.8}.contact-info a{color:#fddb32;text-decoration:none}@media only screen and (max-width:600px){.email-wrapper{padding:10px}.content-cell{padding:25px 20px!important}.otp-code{font-size:30px!important;letter-spacing:6px!important}.header-title h1{font-size:24px!important}.otp-content{padding:20px!important}}@media (prefers-color-scheme:dark){.email-container{background-color:#1a1a1a!important}.content-cell,.greeting{color:#fff!important}.message{color:#ccc!important}}
    </style>
</head>

<body>
    <!-- Email Wrapper Table -->
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" class="email-wrapper">
        <tr>
            <td align="center" valign="top">
                <!-- Main Email Container -->
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600"
                    class="email-container">

                    <!-- Header Section -->
                    <tr>
                        <td class="header-bg">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                <!-- Logo Row -->
                                <tr>
                                    <td class="logo-cell">
                                        <div class="logo">üîê</div>
                                    </td>
                                </tr>
                                <!-- Title Row -->
                                <tr>
                                    <td class="header-title">
                                        <h1>Verification Code</h1>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Main Content Section -->
                    <tr>
                        <td class="content-cell">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">

                                <!-- Greeting Row -->
                                <tr>
                                    <td class="greeting">
                                        Hello, <%= username %>
                                    </td>
                                </tr>

                                <!-- Message Row -->
                                <tr>
                                    <td class="message">
                                        We received a request to verify your account. Please use the verification code
                                        below to complete your authentication.
                                    </td>
                                </tr>

                                <!-- OTP Section -->
                                <tr>
                                    <td class="otp-wrapper">
                                        <table role="presentation" cellspacing="0" cellpadding="0" border="0"
                                            width="100%" class="otp-container">
                                            <tr>
                                                <td align="center">
                                                    <table role="presentation" cellspacing="0" cellpadding="0"
                                                        border="0">
                                                        <tr>
                                                            <td class="otp-content">
                                                                <div class="otp-label">Your Verification Code</div>
                                                                <div class="otp-code">
                                                                    <%= otp %>
                                                                </div>
                                                                <div class="otp-note">This code expires in 5 minutes
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>

                                <!-- Warning Section -->
                                <tr>
                                    <td class="warning-wrapper">
                                        <div class="warning">
                                            <div class="warning-content">
                                                <span class="warning-icon">‚ö†Ô∏è</span>
                                                For your security, never share this code with anyone. Our team will
                                                never ask for your verification code.
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Final Message -->
                                <tr>
                                    <td class="message">
                                        If you didn't request this code, please ignore this email or contact our support
                                        team immediately.
                                    </td>
                                </tr>

                            </table>
                        </td>
                    </tr>

                    <!-- Footer Section -->
                    <tr>
                        <td class="footer-bg">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                                <tr>
                                    <td class="footer-content">
                                        <div class="company-name">Your Company Name</div>
                                        <p class="footer-text">This is an automated message, please do not reply to this
                                            email.</p>
                                        <div class="contact-info">
                                            If you need help, contact us at <a
                                                href="mailto:support@yourcompany.com">support@yourcompany.com</a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>

</html>